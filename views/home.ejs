<%- include('header'); -%>

<link rel="stylesheet" type="text/css" href="/stylesheets/style.css">

<div class="line title-row">
    <div class="">Git - version control</div>
</div>
<div class="line sync-time-row">
    <div class="row-label" style="width: 150px">Last time synced:</div>
    <div class="row-value">27-apr-2020 12:04:25</div>
</div>
<div class="line diff-row">
    <div>Changed files</div>
    <div class="files-container">
        <% for(var i = 0; i < fileChanges.length; i++) { %>
        <div class="status-<%= fileChanges[i].status.toLowerCase() %>"><span
                    class="file-name"><%= fileChanges[i].file %></span>
            <span class="file-status"><%= fileChanges[i].status %></span></div>
        <% } %>
    </div>
</div>
<div class="line sync-row footer-row">
    <button class="btn btn-info commit-btn" data-toggle="modal" data-target="#commitModal">Commit changes</button>
    <button class="btn btn-info push-btn">Publish work</button>
    <button class="btn btn-info pull-btn">Update work</button>
</div>

<div id="git-toast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
        <strong class="mr-auto">Notification</strong>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="toast-body"></div>
</div>
<!-- Modal -->
<div class="modal fade" id="commitModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Input a message for the commit</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">


                    <textarea class="commit-message-input" rows="6" style="  width:100%;
"> </textarea>
                <div class="modal-footer" style="text-align: right">
                <button class="btn btn-info submit-commit-message">Apply commit</button>
                </div>
            </div>

        </div>
    </div>
</div>
